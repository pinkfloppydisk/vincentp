---
layout: null
---
{% assign webmentionsCount = 0 %}
{% assign publishTime = site.data.published.time  | date_to_xmlschema %}{
    "published" : "{{publishTime}}",
    "webmentions" :
        {%- for post in site.posts -%}
            {%- assign postTime = post.date | date_to_xmlschema -%}
            {%- if post.target -%}
                {% if postTime > publishTime -%}
                    {% assign webmentionsCount = webmentionsCount | plus: 1 %}
                    {%- for item in post.target %}
    {
        "source": "{{site.url}}{{ post.url }}",
        "target": "{{item}}",
        "postTime" : "{{postTime}}",
        "publishTime" : "{{publishTime}}"
    }

                    {%- endfor -%}
                {%- endif -%}
            {%- endif -%}

       {%- endfor %}{%- if webmentionsCount == 0 -%}""{%- endif -%}
}
