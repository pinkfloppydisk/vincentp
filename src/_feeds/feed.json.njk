---
{
    "version": "{{metadata.version}}",
    "title": "{{metadata.title}}",
    "home_page_url": "{{metadata.url}}",
    "feed_url": "{{metadata.feedUrl}}",
    "description" : "{{metadata.description}}",
    "icon" : "{{metadata.icon}}",
    "favicon" : "{{metadata.favicon}}",
    "author" : {
            "name" : "{{metadata.author.name}}",
            "url" : "{{metadata.author.url}}",
            "avatar" : "{{metadata.author.avatar}}"
    },
     "items": [{% for post in collections.lifestream | reverse -%}
    {% set absolutePostUrl %}{{ post.url | url | absoluteUrl(metadata.url) }}{% endset %}
          {
            "author": {
                "url" : "{{metadata.author.url}}"
            },
            "title" : "{{ post.data.title }}",
            {%- if post.data.summary %}"summary": "{{ post.data.summary }}",  {%- endif %}
            "date_published" : "{{ post.date | dateToISO  }}"{% if post.data.modified %},
            "date_modified" : "{{ post.modified  | dateToISO}}"{% endif%},
            "id": "{{absolutePostUrl }}",
            "url": "{{absolutePostUrl }}",
            {%- if post.data.photo1_url %}
            "image": "{{ post.data.photo1_url | jsonify}}",
            {%- endif %}
            "content_text": "{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) | dump }}",
            "content_html": "{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) | jsonify }}"
        }{% if loop.last != true %},{% endif %}{% endfor %}
    ]
}
