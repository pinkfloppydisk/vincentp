<article class="h-entry ba b-pale-grey br-5 mb5 relative">
    <div class="pa8 pa5-ns absolute-ns bg-white-t w-100 brt-5">
        <div class="u-checkin h-card">
            <h2 class="ma0 pa0 lh-one"><a href="{{post.data.foursquare}}" class="u-url red f5 p-name rm-underline">{{post.data.title}}</a></h2>
                {% if post.data.region %}
                <small class="p-location h-adr">
                    {% if post.data.locality != '' %}<span class="p-locality">{{post.data.locality}}</span>,{% endif %}
                    {% if post.data.region  != '' %}<span class="p-region">{{post.data.region}}</span>,{% endif %}
                    {% if post.data.country  != '' %}<span class="p-country">{{post.data.country}}</span>{% endif %}
                    <data class="p-latitude" value="{{post.data.latitude}}"></data>
                    <data class="p-longitude" value="{{post.data.longitude}}"></data>
                </small>
                {% endif %}
        </div>
        <div class="e-content">{{ post.templateContent | safe }}</div>
    </div>

    {% if post.data.photo1_url %}
        <img src="/{{post.data.photo1_url}}" class="u-photo db w-100 br-5" alt="{{post.data.photo1_alt}}"/>
    {% else %}
        <img src="https://api.mapbox.com/styles/v1/mapbox/streets-v9/static/pin-l-star+c83539({{post.data.longitude}},{{post.data.latitude}})/{{post.data.longitude}},{{post.data.latitude}},13,0/600x300@2x?access_token=pk.eyJ1IjoidnBpY2tlcmluZyIsImEiOiJjamo1ZWNpbmwwYW1wM3FxaHZ5cHR6N3g3In0.hhrPnSY0r_9fu5QKlhqRHw&logo=false" alt="Mapbox Map of {{post.data.longitude}},{{post.data.latitude}}" class="w-100 u-photo">
        <div class="f7 tr">&copy; <a href='https://www.mapbox.com/map-feedback/'>Mapbox</a> &copy; <a href='https://www.openstreetmap.org/copyright'>OpenStreetMap contributors</a></div>
    {% endif %}

    <div class="absolute-ns bottom-0 pa8 pa5-ns left-0 bg-white-t w-100 brb-5">
        {% include "lifestream/published.njk" %}
    </div>
</article>
