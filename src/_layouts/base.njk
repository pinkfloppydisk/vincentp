<body class="ma0 pa0">
        <div>
            {% include "structure/navigation.njk" %}
             <div class="dg layout-grid center">
                {% block main %}
                <main id="content" class="h-entry">
                    <article>
                        <div class="dg layout-grid center" data-type="blog">
                            <h1 class="p-name ma0 pa0 mb3 f3 f1-ns lh-heading">{{ title }}</h1>
                            {% if summary %}<p class="p-summary grey fw3 f6 italic lh-heading mb7 ">{{ summary }}</p> {% endif %}
                            <div class="e-content">{{content | safe}}</div>
                        </div>
                    </article>
                </main>
            {% endblock %}
        </div>
        </div>
        {% include "structure/footer.njk" %}
    </body>
</html>
